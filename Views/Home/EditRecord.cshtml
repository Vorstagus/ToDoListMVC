 @model IEnumerable<ToDoListMVC.Models.RecordModel>

<h1>Register Record</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRecord" asp-controller="RecordsController" method="post">

            @{
                if (ViewBag.Message != null)
                {
                        <div>
                            @ViewBag.Message
                        </div>
                }
            }
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" value=@Model.Name />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" value=@Model.Description />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }